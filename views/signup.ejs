<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title>Portale Innovazioni</title>
    <!--<link rel="manifest" href="/manifest.json">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">-->
    <% include /head %>
    <style>
        body {
            padding-top: 80px;
        }
    </style>
</head>
<body>
<div class="container">

    <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-sign-in"></span>Registrati</h1>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/signup" method="post">
            <div class="form-group">
                <label>Codice agente</label>
                <input type="number" class="form-control" name="cage" required>
            </div>
            <div class="form-group">
                <label>Utente</label>
                <input type="text" class="form-control" name="cuser" required>
            </div>
            <div class="form-group">
                <label>Nome</label>
                <input type="text" class="form-control" name="xnome" required>
            </div>
            <div class="form-group">
                <label>Cognome</label>
                <input type="text" class="form-control" name="xcogn" required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="xpwd" required>
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Registrati</button>
        </form>

        <hr>

        <p>Sei gi√† registrato? <a href="/login">Entra</a></p>
        <p>O torna alla <a href="/">home</a>.</p>

    </div>

</div>
</body>
</html>
