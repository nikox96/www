<body>
<div class="sticky-top">
    <nav id="navbar-ordine" class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="row justify-content-md-center">
            <div class="col-md-auto">
                <a class="navbar-brand" href="#">Lista Ordini</a>
            </div>

            <div class="col-md-auto">
                <div class="row justify-content-md-center navbar-collapse" id="navbarSupportedContent">
                    <div class="col-md-auto">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="dropdownAzioni" role="button"
                                   data-toggle="dropdown"
                                   aria-haspopup="true" aria-expanded="false">
                                    Azioni
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownAzioni">
                                    <li><a class="dropdown-item" href="/home">Home</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-auto">
                        <form action="/order-list" method="post" class="form-inline">
                            <div class="form-row align-items-center">
                                <div class="col-auto">
                                    <label class="sr-only" for="inlineFormRagSoc">Ragione sociale</label>
                                    <input type="text" name="xragsoc" class="form-control mb-2"
                                           id="inlineFormInputRagSoc"
                                           placeholder="Ragione sociale">
                                </div>
                                <% if (user.cage == 9999) { %>
                                <div class="col-auto">
                                    <label class="sr-only" for="inlineFormCage">Codice agente</label>
                                    <input type="text" name="cageric" class="form-control mb-2" id="inlineFormInputCage"
                                           placeholder="Codice agente">
                                </div>
                                <% } %>
                                <div class="col-auto">
                                    <button type="submit" class="btn btn-primary mb-2">Cerca</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</div>
<div class="container-fluid">
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <div data-spy="scroll" data-target="#navbar-ordine" data-offset="0">
        <div id="client">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Codice Ordine</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Importo</th>
                    <th scope="col">Data</th>
                    <th></th>
                    <th></th>
                    <% if (user.cage == 9999 || user.cage == 0) { %>
                    <th></th>
                    <th></th>
                    <% } %>
                </tr>
                </thead>
                <tbody>
                <% orders.forEach(function(order) { %>
                <tr>
                    <th scope="row"><%= order.ccod %></th>
                    <td><%= order.xragsoc %></td>
                    <td><%= order.iimp %></td>
                    <td><%= order.data %></td>
                    <td>
                        <form action="/detail-order" method="get">
                            <input type="hidden" name="ccod" value="<%= order.ccod %>">
                            <button type="submit" class="btn btn-link"><i class="material-icons">&#xe88f</i></button>
                        </form>
                    </td>
                    <td>
                        <% if (order.cstt == 10 || user.cage == 9999 || user.cage == 0) { %>
                        <form action="/new-order-sum" method="get">
                            <input type="hidden" name="ccod" value="<%= order.ccod %>">
                            <button type="submit" class="btn btn-link"><i class="material-icons">&#xe254</i></button>
                        </form>
                        <% } %>
                    </td>
                    <% if (user.cage == 9999 || user.cage == 0) { %>
                    <td>
                        <form action="/del-order" method="post">
                            <input type="hidden" name="ccod" value="<%= order.ccod %>">
                            <button type="submit" class="btn btn-link"><i class="material-icons">&#xe872</i></button>
                        </form>
                    </td>
                    <td>
                        <form action="/get-csv" method="get">
                            <input type="hidden" name="ccod" value="<%= order.ccod %>">
                            <button type="submit" class="btn btn-link"><i class="material-icons">&#xe2c4</i></button>
                        </form>
                    </td>
                    <% } %>
                </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>
