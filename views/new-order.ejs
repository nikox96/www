<!-- views/new-order.ejs -->
<!doctype html>
<html>
<head>
    <title>Portale Innovazioni - Nuovo ordine</title>
    <!--<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css"
          integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
    <link rel="stylesheet" href="/material-design-icons/iconfont/material-icons.css">
    <style>
        body {
            padding-top: 0%;
            word-wrap: break-word;
        }
    </style>
</head>
<body>
<nav id="navbar-ordine" class="navbar navbar-light bg-light"
     style="position: fixed !important; width: 100% !important;">
    <a class="navbar-brand" href="#">Nuovo Ordine</a>
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link" href="/new-order">Cliente</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" href="/new-order-product">Prodotti</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" href="/new-order-cond-pag">Condizione di pagamento</a>
        </li>
    </ul>
</nav>
<div class="container" style="padding-top: 3%">
    <form action="/new-order" method="post" style="position: fixed !important;">
        <div class="form-row align-items-center">
            <div class="col-auto">
                <label class="sr-only" for="inlineFormCodCli">Codice cliente</label>
                <input type="text" name="ccod" class="form-control mb-2" id="inlineFormInputCodCli"
                       placeholder="Codice cliente">
            </div>
            <div class="col-auto">
                <label class="sr-only" for="inlineFormRagSoc">Ragione sociale</label>
                <input type="text" name="xragsoc" class="form-control mb-2" id="inlineFormInputRagSoc"
                       placeholder="Ragione sociale">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-2">Cerca</button>
            </div>
        </div>
    </form>
</div>
<div class="container-fluid" style="padding-top: 2%">
    <div data-spy="scroll" data-target="#navbar-ordine" data-offset="0" style="width: 100%; height: 70%">
        <div id="client">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Partia IVA</th>
                    <th scope="col">Ragione sociale</th>
                    <th scope="col">Comune</th>
                    <th scope="col">C.A.P.</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <% clients.forEach(function(clients) { %>
                <tr>
                    <th scope="row">
                        <% if (clients.cpiva = '') { %>
                        <%= clients.cpiva %>
                        <% } else { %>
                        <%= clients.cfis %>
                        <% } %>
                    </th>
                    <td><%= clients.xragsoc %></td>
                    <td><%= clients.xcom %></td>
                    <td><%= clients.ccap %></td>
                    <td>
                        <a href="/new-order-product?ccodcli=<%= clients.ccod %>"><i class="material-icons">&#xe5c8</i></a>
                    </td>
                </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
</body>
</html>