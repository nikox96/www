<!-- views/new-order.ejs -->
<!doctype html>
<html>
<head>
    <title>Portale Innovazioni - Nuovo ordine</title>
    <!--<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css"
          integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
    <link rel="stylesheet" href="/material-design-icons/iconfont/material-icons.css">
    <script
            src="http://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
</head>
<body>
<div class="sticky-top">
    <nav id="navbar-ordine" class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Nuovo Ordine</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdownAzioni" role="button"
                       data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        Azioni
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownAzioni">
                        <li><a class="dropdown-item" href="/new-order-product">Avanti</a></li>
                        <li><a class="dropdown-item" href="/home">Annulla</a></li>
                    </ul>
                </li>
            </ul>
            <form action="/new-order" method="get" class="form-inline">
                <div class="form-row align-items-center">
                    <div class="col-auto">
                        <label class="sr-only" for="inlineFormCodCli">Codice cliente</label>
                        <input type="text" name="ccod" class="form-control mb-2" id="inlineFormInputCodCli"
                               placeholder="Codice cliente">
                    </div>
                    <div class="col-auto">
                        <label class="sr-only" for="inlineFormRagSoc">Ragione sociale</label>
                        <input type="text" name="xragsoc" class="form-control mb-2" id="inlineFormInputRagSoc"
                               placeholder="Ragione sociale">
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary mb-2">Cerca</button>
                    </div>
                </div>
            </form>
        </div>
    </nav>
</div>
<div class="container-fluid">
    <div data-spy="scroll" data-target="#navbar-ordine" data-offset="0">
        <div id="client">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Partia IVA</th>
                    <th scope="col">Ragione sociale</th>
                    <th scope="col">Comune</th>
                    <th scope="col">C.A.P.</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <% clients.forEach(function(clients) { %>
                <tr>
                    <th scope="row">
                        <% if (clients.cpiva = '') { %>
                        <%= clients.cpiva %>
                        <% } else { %>
                        <%= clients.cfis %>
                        <% } %>
                    </th>
                    <td><%= clients.xragsoc %></td>
                    <td><%= clients.xcom %></td>
                    <td><%= clients.ccap %></td>
                    <td>
                        <form action="/new-order" method="post">
                            <input type="hidden" name="ccod" value="<%= clients.ccod %>">
                            <button type="submit" class="btn btn-link"><i class="material-icons">&#xe5c8</i></button>
                        </form>
                    </td>
                </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>